<%= form_for(@it, :url => "/users/profile", :multipart => true)   do |f| %>
    <div class="field">
    <%= f.label :city_id %><br />
    <%= f.collection_select :city_id, City.all, :id, :name %>
  </div>
  <div class="field">
    <%= f.label :role_id %><br />
    <%= f.collection_select :role_id, Role.all, :id, :name %>
  </div>  

  <div id='select-activity'>
  </div>

<div>
  <%= f.label :price %><br />
  <%= f.text_field :price %>
 </div>

  <div>
   <%= f.label :phone %><br />
   <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :portfolio_link %><br />
    <%= f.text_field :portfolio_link %>
  </div>
 
  <div>
    <%= f.label :portfolio_description %><br />
    <%= f.text_area(:portfolio_description, :size => '30x2') %>
  </div>

 <div>
  <%= f.label :portfolio_file %><br />
  <%= f.file_field :portfolio_file %>
 </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

