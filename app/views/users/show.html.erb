<div id="profile">
  <dl>
    <dt>name:</dt>
    <dd><%= @user.name %></dd>
    <dt>user.portfolio file:</dt>
    <dd><%= @user.portfolio_file%></dd>
    <dt>portfolio description:</dt>
    <dd><%= @user.portfolio_description%></dd>
    <dt>portfolio link:</dt>
    <dd><%= @user.portfolio_link%></dd>
    <dt>phone:</dt>
    <dd><%= @user.phone%></dd>
    <dt>price:</dt>
    <dd><%= @user.price%></dd>
  </dl>
</div>
<% if current_user.id == @user.id %>
  <%=link_to 'Edit', '/users/properties' %>
  <ul>
    <% @user.received_messages.each do |received_message| %>
      <li>
        <%= received_message.sent_messageable.name %> 
        <%= received_message.topic %>
        <%= received_message.body %>
        <a class="reply_link" href="javascript:void(0)" data-message="<%= received_message.id %>">Reply</a>
      </li>

    <% end %>
  </ul>
  <!-- <form action = '/reply_message' style="display: none" id="reply_form">  -->
  
  
  <%= form_tag '/reply_message', :method => :post, remote: true, :class => "message_form", style:"display: none", id:"reply_form" do %>
    <input id="reply_message_id" type="hidden" name="message_id" value="">

    <div>
       <textarea rows="3" cols="30" name ="body"></textarea>
    </div>
    <div class="actions">
      <input type="submit" value="Message">
    </div>
  <% end %>
<% else %>
  <%= form_tag '/send_message', :method => :post, remote: true, :class => "message_form", id:"send_message_form" do %>
    <input type="hidden" name="user_id" value="<%= @user.id %>">

    <div>
       <textarea rows="3" cols="30" name ="body"></textarea>
    </div>
    <div class="actions">
      <input type="submit" value="Message">
    </div>
  <% end %>
<% end %> 