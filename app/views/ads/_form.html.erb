<%= form_for(@ad) do |f| %>
  <% if @ad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ad.errors.count, "error") %> prohibited this ad from being saved:</h2>

      <ul>
      <% @ad.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    Описание:<br />
    <%= f.text_area(:description, :size => '30x2') %>
  </div>
  <div class="field">
     Дейности:<br />
    <%= f.select :ad_activities, Activity.all.collect {|x| [x.name, x.id]}, {}, :multiple => true %>
  </div>
  <div class="field">
    Цена за час:<br />
    <%= f.number_field :max_price %>
  </div>
  <div class="field">
    Град:<br />
    <%= f.collection_select :city_id, City.all, :id, :name %>
  </div>
  <div class="field">
    Крайна дата:<br />
    <%= f.date_select :deadline %>
  </div>
  <div class="field">
    Период:<br />
    <%= f.text_field :period %>
  </div>
  <div class="actions">
    <input type="submit" value="Създай", class="exit">
    
  </div>
<% end %>

