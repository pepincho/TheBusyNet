<div class="section group">
      <div class="col span_1_of_4"> </div>
      <div class="col span_2_of_4"> 
         <section class="contenta">
<h2>Обяви</h2>
<%= form_tag('/ads', :method => :get) do %>
  <div class="field">
    <%= label_tag :city_id %><br />
    <%=select_tag "city_id", options_from_collection_for_select( @cities, "id", "name", params[:city_id]  )%>
  </div>
  <div class="field">
    <%= label_tag :ad_activities %><br />
    <%=select_tag "activity_id", options_from_collection_for_select( @activities, "id", "name", params[:activity_id]),  {:multiple => true} %>
  </div>
  <div>
    <%= label_tag :min_price %><br />
    <%= text_field_tag(:min_price) %>
  </div>
  <div>
    <%= label_tag :max_price %><br />
    <%= text_field_tag(:max_price) %>
  </div>

  <div class="actions">
    <input type="submit" value="Търси", class="exit">
  </div>
<% end %>
 

<table>
  <tr>
    <th>Потребител</th>
    <th>Максимална цена</th>
    <th>Град</th>
    <th>Крайна дата</th>
    <th>Период в дни</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>



<% @ads.each do |ad| %>
  <tr>
    <td><%= ad.user.try(:name) %></td>
    <td><%= ad.max_price %></td>
    <td><%= ad.city.try(:name) %></td>
    <td><%= ad.deadline %></td>
    <td><%= ad.period %></td>
    <td><%= link_to 'Покажи', ad %></td>
    <td><%= link_to 'Редактирай', edit_ad_path(ad) %></td>
    <td><%= link_to 'Изтрий', ad, method: :delete, data: { confirm: 'Потвърдете' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ad', new_ad_path %>

</section>
</div>
<div class="col span_1_of_4"> </div>
</div>