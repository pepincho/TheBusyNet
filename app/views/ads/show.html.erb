<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @ad.user_id %>
</p>

<p>
  <b>Max price:</b>
  <%= @ad.max_price %>
</p>

<p>
  <b>City:</b>
  <%= @ad.city_id %>
</p>

<p>
  <b>Deadline:</b>
  <%= @ad.deadline %>
</p>

<p>
  <b>Period:</b>
  <%= @ad.period %>
</p>
<% if current_user.id != @ad.user_id %>
  <%= form_tag '/ads/apply', :method => :post do %>
  <%= hidden_field_tag "ad_id", "#{@ad.id}" %>
  <%= submit_tag("Кандидатствай") %>
<% end %>
<% end %>

<% if current_user.id == @ad.user_id %>
  <%= link_to 'Edit', edit_ad_path(@ad) %> |
<% end %>
<%= link_to 'Back', ads_path %>
