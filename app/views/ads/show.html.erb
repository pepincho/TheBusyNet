<p id="notice"><%= notice %></p>

<p>
  <b>Description:</b>
  <%= @ad.description %>
</p>

<p>
  <b>User:</b>
  <%= @ad.user.name %>
</p>

<p>
  <b>Max price:</b>
  <%= @ad.max_price %>
</p>

<p>
  <b>City:</b>
  <%= @ad.city.name %>
</p>

<p>
  <b>Deadline:</b>
  <%= @ad.deadline %>
</p>

<p>
  <b>Period:</b>
  <%= @ad.period %>
</p>
<% if current_user.id != @ad.user_id %>
  <%= form_tag '/ads/apply', :method => :post do %>
    <%= hidden_field_tag "ad_id", "#{@ad.id}" %>
    <input id="button_apply" name="commit" type="submit" value="Кандидатствай">
  <% end %>
<% end %>
<div id="apply_message" style="display: none;">
  Кандидатурата Ви е изпратена успешно.
</div>
<% if current_user.id == @ad.user_id %>
  <%= link_to 'Редактирай', edit_ad_path(@ad) %> |
<% end %>
<%= link_to 'Назад', ads_path %>
