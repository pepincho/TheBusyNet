<head>
<%= stylesheet_link_tag  "application" %> 
</head> 

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class=>"register"  }) do |f| %>
  <%= devise_error_messages! %>
  
  <h2> Sign up </h2>


  <%= f.text_field :name, :autofocus => true, :class=>"text-field", :placeholder=>"Name" %></div>

  <%= f.email_field :email, :autofocus => true, :class=>"text-field", :placeholder=>"E-mail" %></div>

  <%= f.password_field :password, :class=>"text-field", :placeholder=>"Password" %></div>

  <%= f.password_field :password_confirmation, :class=>"text-field", :placeholder=>"Repeat Password" %></div>

  <div> <input type="submit" value="Sign up", class="button"></div>
 
  <%= render "devise/shared/links" %>
<% end %>
